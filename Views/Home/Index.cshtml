@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

@foreach (var x in Model.Book)
{//This model pushes out to the index page what is in the database!
<div class="text-center $font-family-monospace bg-secondary m-1 p-1">
    <h4>Title: @x.Title</h4>
    <p>Author: @x.FirstName</p>
    <p>Author: @x.LastName</p>
    <p>Publisher: @x.Publisher</p>
    <p>ISBN: @x.ISBN</p>
    <p>Category: @x.Category</p>
    <p>Category: @x.Genre</p>
    <p>Price: @x.Price</p>
    <p>Page Number: @x.PageNumber</p>
</div>
}
<br />

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1"></div>
